{
  "name": "ChatGPT Prompt Manager",
  "description": "Easily manage your prompts and inject them into ChatGPT textbox.",
  "version": "1.1.0",
  "manifest_version": 3,

  "host_permissions": [
    "*://chat.openai.com/*",
    "*://chatgpt.com/*"
  ],
  
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "default_title": "ChatGPT Prompt Manager"
  },

  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*"
      ],
      "js": [
        "js/services.js",
        "js/integration.js",
        "js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "html/sidebar.html",
        "css/sidebar.css"
      ],
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*"
      ]
    }
  ],

  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
